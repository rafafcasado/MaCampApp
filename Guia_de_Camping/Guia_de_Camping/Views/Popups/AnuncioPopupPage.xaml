<?xml version="1.0" encoding="utf-8" ?>
<pages:PopupPage xmlns="http://xamarin.com/schemas/2014/forms"
                 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                 xmlns:pages="clr-namespace:Rg.Plugins.Popup.Pages;assembly=Rg.Plugins.Popup"
                 x:Class="Aspbrasil.Views.Popups.AnuncioPopupPage"
                 CloseWhenBackgroundIsClicked="False">

    <StackLayout Margin="15" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" Spacing="20">
        <ContentView x:Name="anuncioView" VerticalOptions="FillAndExpand" />
        <Button Text=" Fechar " Clicked="btFechar_Clicked" HorizontalOptions="CenterAndExpand" BackgroundColor="{StaticResource CorPrimaria}" TextColor="{StaticResource CorTextoSobreCorPrimaria}" />
    </StackLayout>

</pages:PopupPage>