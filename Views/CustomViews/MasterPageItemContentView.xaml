<ContentView
    x:Class="MaCamp.Views.CustomViews.MasterPageItemContentView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <StackLayout
        Padding="15"
        Orientation="Horizontal"
        Spacing="15">

        <Image
            x:Name="imIcon"
            HeightRequest="15" />
        <Label
            x:Name="lbTexto"
            FontAttributes="Bold"
            FontSize="14"
            VerticalOptions="Center" />
    </StackLayout>

</ContentView>